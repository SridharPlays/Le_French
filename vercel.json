{
  "version": 2,
  "name": "le-french",
  
  "outputDirectory": "dist",
  "installCommand": "npm install --prefix ./backend && npm install --prefix ./frontend",
  
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10 
      }
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ],
  
  "buildCommand": "npm run build --prefix frontend"
}